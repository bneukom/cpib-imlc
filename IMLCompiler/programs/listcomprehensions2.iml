program listSum()
global
fun isPrime(in copy p:int) returns var b:bool
local
	var c:int
do
	c init := 2;
	
	if p > 1 do
		b init := true;
		while c < p do
			if c mod p == 0 do
				b := false
			else
				skip
			endif;
			c := c + 1
		endwhile
	else
		b init := false
	endif
endfun;

var list:[int]
do
	list init := { x | x from 0 to 100 when isPrime(x) }
	
